class Solution{
    public long putMarbles(int[] weights, int k){
        long ans=0;
        int res[]=new int[weights.length-1];
        Arrays.fill(res,weights[0]+weights[weights.length-1]);
        for(int i=0;i<res.length;i++){
            res[i]=weights[i]+weights[i+1];
        }
        Arrays.sort(res);
        long min=0,max=0;
        for(int i=0;i<k-1;i++){
            min+=res[i];
        }
        for(int i=res.length-1;i>res.length-k;i--){
            max+=res[i];
        }
        return max-min;
    }
}
