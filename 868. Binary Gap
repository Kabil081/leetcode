class Solution {
    public int binaryGap(int n) {
        int num=n;
        StringBuilder sb=new StringBuilder();
        while(num!=0){
            sb.append(num%2);
            num/=2;
        }
        int max=0;
        int ind=1000;
        for(int i=0;i<sb.length();i++){
            if(sb.charAt(i)-'0'==1){
                max=Math.max(max,i-ind);
                ind=i;
            }
        }
        return max;
    }
}
