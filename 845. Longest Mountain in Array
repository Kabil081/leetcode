class Solution{
    public int longestMountain(int[] arr){
        int n=arr.length;
        int ans=0;
        for(int i=1;i<n-1;i++){
            if(arr[i]>arr[i-1] && arr[i]>arr[i+1]){
                int left=i-1;
                int right=i+1;
                while(left>=0 && arr[left]<arr[left+1]) left--;
                while(right<n && arr[right]<arr[right-1]) right++;
                if(left!=i-1) left++;
                if(right!=i+1) right--;
                ans=Math.max(right-left+1,ans);
            }
        }
        return ans;
    }
}
