class Solution{
    public int longestSubarray(int[] nums){
        int n=nums.length;
        if(n<=2) return n;
        int max=2;
        int cur=2;
        int first=nums[0];
        int second=nums[1];
        for(int i=2;i<n;i++){
            if(first+second==nums[i]){
                cur++;
                max=Math.max(max,cur);
            }else{
                cur=2;
            }
            first=nums[i-1];
            second=nums[i];
        }
        return max;
    }
}
