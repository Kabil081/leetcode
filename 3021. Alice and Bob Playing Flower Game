class Solution{
    public long flowerGame(int n, int m){
        long sum=0;
        if(m<n){
            long oddCount=n/2 + n%2;
            long evenCount=n/2;
            sum+=(m/2)*oddCount;
            sum+=(m%2==1)?((m/2)+1)*evenCount:(m/2*evenCount);
        }else{
            long oddCount=m/2 + m%2;
            long evenCount=m/2;
            sum+=(n/2)*oddCount;
            sum+=(n%2==1)?((n/2)+1)*evenCount:(n/2*evenCount);
        }
        return sum;
    }
}
