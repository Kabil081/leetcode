class Solution{
    public int countCollisions(String directions){
        int ans=0;
        int r_count=0;
        boolean can_collide=false;
        for(char dir:directions.toCharArray()){
            if(dir=='S'){
                ans+=r_count;
                can_collide=true;
                r_count=0;
            }else if(dir=='R'){
                r_count++;
                can_collide=false;
            }else{
                if(r_count>0){
                    ans+=r_count+1;
                    can_collide=true;
                    r_count=0;
                }else if(can_collide){
                    ans++;
                }
            }
        }
        return ans;
    }
}
