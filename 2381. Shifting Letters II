class Solution{
    public String shiftingLetters(String s,int[][] shifts){
        int n=s.length();
        int diff[]=new int[n+2];
        for(int arr[]:shifts){
            diff[arr[0]]+=arr[2]==0?-1:1;
            diff[arr[1]+1]+=arr[2]==0?1:-1;
        }
        int val=0;
        StringBuilder sb=new StringBuilder();
        for(int i=0;i<n;i++){
            int ind=s.charAt(i)-'a';
            val+=diff[i];
            int shift=(val+ind)%26;
            if(shift<0) shift+=26;
            sb.append((char)(shift+'a'));
        }
        return sb.toString();
    }
}
