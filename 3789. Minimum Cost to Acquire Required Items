class Solution{
    public long minimumCost(int cost1, int cost2, int costBoth, int need1, int need2){
        if(need1==0 && need2==0) return 0;
        long ans=0;
        if(costBoth<=cost1+cost2){
            ans+=(long)costBoth*Math.min(need1,need2);
            if(need1<need2){
                int rem=need2-need1;
                ans+=(long)rem*Math.min(cost2,costBoth);
            }else if(need2<need1){
                int rem=need1-need2;
                ans+=(long)rem*Math.min(costBoth,cost1);
            }
        }else{
            ans+=(long)cost1*need1;
            ans+=(long)cost2*need2;
        }
        return ans;
    }
}
