class Solution{
    public long minCost(String s, int[] cost){
        int n=cost.length;
        long freq[]=new long[26];
        long total=0;
        for(int i=0;i<n;i++){
            int ind=s.charAt(i)-'a';
            freq[ind]+=cost[i];
            total+=cost[i];
        }
        long max=Long.MAX_VALUE;
        for(long num:freq){
            if(num>0) max=Math.min(max,total-num);
        }
        return max;
    }
}
