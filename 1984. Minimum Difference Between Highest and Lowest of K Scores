class Solution{
    public int minimumDifference(int[] nums, int k){
        Arrays.sort(nums);
        int n=nums.length;
        int min=nums[0];
        int max=nums[k-1];
        int diff=max-min;
        int l=1,r=k;
        while(r<n){
            min=nums[l];
            max=nums[r];
            diff=Math.min(diff,max-min);
            l++;
            r++;
        }
        return diff;
    }
}
