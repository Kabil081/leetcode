class Solution {
    public int reverseBits(int n) {
        int arr[]=new int[32];
        int ind=31;
        while(n>0){
            arr[ind]=n%2;
            n/=2;
            ind--;
        }
        reverse(arr);
        return binary(arr);
    }
    public int binary(int arr[]){
        int power=0;
        int ans=0;
        for(int i=31;i>=0;i--){
            if(arr[i]==1){
                ans+=Math.pow(2,power);
            }
            power++;
        }
        return ans;
    }
    public void reverse(int arr[]){
        int l=0,r=31;
        while(l<r){
            int t=arr[l];
            arr[l]=arr[r];
            arr[r]=t;
            l++;
            r--;
        }
    }
}
