class Solution {
    public int longestPalindrome(String s){
        int freq[]=new int[64];
        for(char ch:s.toCharArray()) freq[ch-'A']++;
        int oddMax=0;
        int ans=0;
        int count=0;
        for(int i=0;i<64;i++){
            if(freq[i]%2==0) ans+=freq[i];
            else oddMax=Math.max(oddMax,freq[i]);
        }
        for(int i=0;i<64;i++){
            if(freq[i]%2==1){
                if(freq[i]==oddMax) count++;
                else ans+=freq[i]-1;
            }
        }
        if(count>1){
            ans+=oddMax;
            oddMax--;
            count--;
            ans+=oddMax*count;
        }else{
            ans+=oddMax;
        }
        return ans;
    }
}
