class Solution {
    public int scoreDifference(int[] nums) {
        int sum1=0;
        int sum2=0;
        int player=0;
        for(int i=0;i<nums.length;i++){
            if(nums[i]%2==1){
                player=player==0?1:0;
            }
            if((i+1)%6==0){
                player=player==0?1:0;
            }
            if(player==0){
                sum1+=nums[i];
            }else{
                sum2+=nums[i];
            }
        }
        return sum1-sum2;
    }
}
