class Solution{
    public int[] sumZero(int n){
        if(n==1) return new int[]{0};
        int res[]=new int[n];
        int ind=1;
        for(int i=0;i+1<n;i+=2){
            res[i]=ind;
            res[i+1]=-ind;
            ind++;
        }
        if(n%2==1) res[n-1]=0;
        return res;
    }
}
