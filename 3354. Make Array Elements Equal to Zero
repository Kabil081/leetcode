class Solution{
    public int countValidSelections(int[] nums){
        if(nums.length==1 && nums[0]==0) return 2; 
        int n=nums.length;
        int prefix[]=new int[n];
        prefix[0]=nums[0];
        for(int i=1;i<n;i++){
            prefix[i]=prefix[i-1]+nums[i];
        }
        int ans=0;
        for(int i=0;i<n;i++){
            if(nums[i]==0){
                if(prefix[i]==prefix[n-1]-prefix[i]) ans+=2;
                else if(prefix[n-1]-prefix[i]-1 == prefix[i]) ans+=1;
                else if(prefix[n-1]-prefix[i]==prefix[i]-1) ans+=1;
            }
        }
        return ans;
    }
}
