class Solution{
    public long getDescentPeriods(int[] prices){
        long ans=1;
        int cur_sum=1;
        int n=prices.length;
        for(int i=1;i<n;i++){
            if(prices[i-1]-1==prices[i]) cur_sum++;
            else cur_sum=1;
            ans+=cur_sum;
        }
        return ans;
    }
}
