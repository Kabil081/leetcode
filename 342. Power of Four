class Solution{
    public boolean isPowerOfFour(int n){
        if(n==1) return true;
        if(n%4!=0) return false;
        int num=1;
        for(int i=1;i<16;i++){
            num*=4;
            if(num==n) return true;
            else if(num>n) return false;
        }
        return false;
    }
}
