class Solution{
    int dp[];
    int MOD=1000000007;
    public int peopleAwareOfSecret(int n, int delay, int forget){
        dp=new int[10001];
        return find(1,delay,forget,n);
    }
    public int find(int day,int delay,int forget,int n){
        if(day>n) return 0;
        long ans=0;
        if(day+forget>n) ans=1;
        if(dp[day+delay]!=-0) return dp[day+delay];
        for(int i=day+delay;i<day+forget && i<=n;i++){
            ans+=find(i,delay,forget,n);
            ans%=MOD;
        }
        return dp[day+delay]=(int)ans;
    }
}
