class Solution{
    public int convertor(StringBuilder sb){
        int val=0;
        int power=sb.length()-1;
        for(char ch:sb.toString().toCharArray()){
            if(ch=='1') val+=Math.pow(2,power);
            power--;
        }
        return val;
    }
    public int sumRootToLeaf(TreeNode root){
        return helper(root,new StringBuilder());
    }
    public int helper(TreeNode root,StringBuilder sb){
        if(root==null) return 0;
        sb.append(root.val); 
        if(root.left==null && root.right==null){
            int val=convertor(sb);
            sb.deleteCharAt(sb.length()-1);
            return val;
        }
        int left=helper(root.left,sb);
        int right=helper(root.right,sb);
        sb.deleteCharAt(sb.length()-1);
        return left+right;
    }
}
