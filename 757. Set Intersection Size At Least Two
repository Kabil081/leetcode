class Solution{
    public int intersectionSizeTwo(int[][] intervals){
        int ans=0;
        Arrays.sort(intervals,(a,b)->{
            if(a[1]==b[1]) return b[0]-a[0];
            return a[1]-b[1];
        });
        int prev=-1;
        int cur=-1;
        for(int i=0;i<intervals.length;i++){
            int start=intervals[i][0];
            int end=intervals[i][1];
            if(start<=prev) continue;
            if(cur<start){
                prev=end-1;
                cur=end;
                ans+=2;
            }else{
                prev=cur;
                cur=end;
                ans++;
            }
        }
        return ans;
    }
}
